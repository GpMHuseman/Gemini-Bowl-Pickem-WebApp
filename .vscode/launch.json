{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "GOOGLE_APPLICATION_CREDENTIALS": "${workspaceFolder}/private/web-bowl-pickem-firebase-admin-v1.json"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=8080"
            ],
            "jinja": true,
            "autoStartBrowser": true
        }
    ]
}